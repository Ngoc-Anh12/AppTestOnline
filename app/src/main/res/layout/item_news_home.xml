<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/padding_normal"
    android:padding="@dimen/padding_normal"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/img_new"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="75dp"
        android:layout_height="75dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/image" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_title_course"
        android:maxLines="2"
        android:text="Tin hot nhất trong ngày 20/01/2021. Tiêu đề dài khoảng 2 dòng..."
        android:textColor="@color/color_title"
        android:textSize="@dimen/small_text_view_size"
        android:layout_marginLeft="@dimen/margin_left_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_new"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:text=" 28/01/2021"
        android:layout_marginTop="@dimen/margin_top_small"
        android:textSize="@dimen/small_text_view_size"
        android:layout_marginLeft="@dimen/margin_left_small"
        app:layout_constraintStart_toEndOf="@id/img_new"
        app:layout_constraintTop_toBottomOf="@id/tv_title_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>